<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Description</th>
      <th>Date</th>
      <th>Userid</th>
      <th>Stats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.nome %></td>
        <td><%= project.description %></td>
        <td><%= project.date %></td>
        <td><%= project.user_id %></td>
        <td><%= project.stats %></td>
        <td><%= link_to 'Show', project, class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: "btn btn-default btn-sm" %>
<p><h2>Projetos envolvido</h2>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Description</th>
      <th>Datestart</th>
      <th>Dateend</th>
      <th>Stats</th>
      <th>Projectid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <% @projectsPart.each do |proj| %>
    <% if task.project_id == proj.id %>
      <tr>
         <td><%= proj.nome %></td>
        <td><%= proj.description %></td>
        <td><%= proj.date %></td>
        <td><%= proj.user_id %></td>
        <td><%= proj.stats %></td>        
        <td><%= link_to 'Show', proj, class: "btn btn-default btn-sm" %></td>
      </tr>
      <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
