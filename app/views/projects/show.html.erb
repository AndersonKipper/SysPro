<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @project.nome %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @project.date %>
</p>

<p>
  <strong>Userid:</strong>
  <%= @project.user_id %>
</p>

<p>
  <strong>Stats:</strong>
  <%= @project.stats %>
</p>
<hr>
<p>
  <table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Description</th>
      <th>Datestart</th>
      <th>Dateend</th>
      <th>Stats</th>
      <th>Projectid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
      <tr>
        <td><%= task.nome %></td>
        <td><%= task.description %></td>
        <td><%= task.dateStart %></td>
        <td><%= task.dateEnd %></td>
        <td><%= task.stats %></td>
        <td><%= task.project_id %></td>

        <% if task.user_email == @user.email || @user.id == @project.user_id %>

        <td><%= link_to 'Show', project_task_path(task.project_id, task), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_project_task_path(task.project_id, task), class: "btn btn-default btn-sm" %></td>

        <% if @user.id == @project.user_id %>
        <td><%= link_to 'Destroy', project_task_path(task.project_id, task), class: "btn btn-default btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</p>


<% if @project.user_id == @user.id %>  <!-- testa usuario - arrumar aqui -->

<%= link_to 'New Task', new_project_task_path(@project), class: "btn btn-default btn-sm" %>
<%= link_to 'Edit', edit_project_path(@project), class: "btn btn-default btn-sm" %>
<%= link_to 'Back', projects_path, class: "btn btn-default btn-sm" %>
<% end %>
<div >
<p>
  <hr>
  <h2>Forum</h2>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Mensagem</th>
      <th>Data</th>
    </tr>
  </thead>
<tbody>
    <% @project.forums.each do |msg| %>
      <tr>
        <td><%= msg.name_user %></td>
        <td><%= msg.message %></td>
        <td><%= msg.data %></td>
        
      </tr>
    <% end %>
    
  </tbody>
</table>
<p>
  <%= form_for(@forum) do |f| %>
  <% if @forum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@forum.errors.count, "error") %> prohibited this forum from being saved:</h2>

      <ul>
      <% @forum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <table>
    <tbody>
    <tr>
    <td><%= f.label 'Projeto' %></td>
   <td><%= f.label 'Usuario Id' %></td>
   <td> <%= f.label 'Usuario' %></td>
   <td> <%= f.label 'Mensagem' %></td>
   <td> <%= f.label 'Data' %></td>

  </tr>
  <tr>

   <td> <%= f.number_field :project_id,:readonly => true %> </td>
   <td> <%= f.number_field :user_id,:readonly => true %> </td>
   <td> <%= f.text_field :name_user,:readonly => true %></td>
   <td> <%= f.text_area :message %> </td>   
   <td> <%= f.date_select :data,:readonly => true %></td>
  </tr>
  </tbody>
</table>
  <div class="actions">

    <%= submit_tag "Enviar", :class => "btn btn-default btn-sm", :type => "submit" %>
  </div>
<% end %>





</div>
