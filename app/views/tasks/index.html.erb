<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Description</th>
      <th>Datestart</th>
      <th>Dateend</th>
      <th>Stats</th>
      <th>Projectid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.nome %></td>
        <td><%= task.description %></td>
        <td><%= task.dateStart %></td>
        <td><%= task.dateEnd %></td>
        <td><%= task.stats %></td>
        <td><%= task.project_id %></td>
        <td><%= link_to 'Show', project_task_path(task.project_id, task), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_project_task_path(task.project_id, task), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', project_task_path(task.project_id, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_project_path, class: "btn btn-default btn-sm" %>
