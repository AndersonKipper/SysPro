<h1>Usu√°rios</h1>
<%= link_to 'Novo Usuario', new_user_path, class: "btn btn-default" %>
<table class="table">
  <thead>
    <tr>
      <th>Nome:</th>
      <th>Email:</th>
      <th>Data de Nascimento:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nome %></td>
        <td><%= user.email %></td>
        <td><%= user.date %></td>
        <td><%= link_to 'Show', user, class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

