<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @user.nome %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<p>
  <strong>Data de Nascimento:</strong>
  <%= @user.date %>
</p>


<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Data</th>
      <th>Userid</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<p>
	<hr>
	<h2>Projetos</h2>
</p>
  <tbody>
    <% @user.projects.each do |project| %>
      <tr>
        <td><%= project.nome %></td>
        <td><%= project.description %></td>
        <td><%= project.date %></td>
        <td><%= project.user_id %></td>
        <td><%= project.stats %></td>
      </tr>
    <% end %>
  </tbody>
</table>